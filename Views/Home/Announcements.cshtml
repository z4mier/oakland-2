@{
    ViewData["Title"] = "Announcements";
    ViewData["HideFooter"] = true;
}

<!-- Bootstrap Styling -->
<style>
    body {
        font-family: 'Josefin Sans', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Back Button */
    .back-btn {
        display: flex;
        align-items: center;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        color: black;
        margin-bottom: 20px;
    }

        .back-btn i {
            font-size: 22px;
            margin-right: 8px;
        }

    /* Main Title */
    .announcement-title {
        display: flex;
        align-items: center;
        font-weight: bold;
        font-size: 24px;
        margin-bottom: 20px;
    }

        .announcement-title i {
            font-size: 28px;
            margin-right: 10px;
            color: black;
        }

    /* Announcement Cards */
    .announcement-card {
        background: white;
        border: 2px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

        .announcement-card h5 {
            font-weight: bold;
            font-size: 18px;
        }

        .announcement-card p {
            margin: 5px 0;
            font-size: 14px;
        }

    /* Colored Borders */
    .meeting {
        border-left: 5px solid #28a745;
    }

    .water-maintenance {
        border-left: 5px solid #007bff;
    }

    .fire-drill {
        border-left: 5px solid #ff5733;
    }

    .security-alert {
        border-left: 5px solid #333;
    }

    /* Links */
    .announcement-card a {
        text-decoration: none;
        font-weight: bold;
        color: #007bff;
    }
</style>

<!-- Main Content -->
<main class="container mt-4">
    <!-- Back Button -->
    <div class="mb-3">
        <a href="javascript:history.back()" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>


    <!-- Title -->
    <h2 class="announcement-title">
        <i class="bi bi-megaphone-fill"></i> Community Announcements
    </h2>

    <!-- Announcements -->
    <div class="announcement-card meeting">
        <h5>🏡 Monthly Homeowners' Meeting</h5>
        <p>📅 <strong>Date:</strong> March 20, 2025 | ⏰ 6:00 PM</p>
        <p>📍 <strong>Venue:</strong> Clubhouse Function Hall</p>
        <p>📌 <strong>Details:</strong> All residents are invited to discuss community updates, security, and upcoming events. Your participation is highly encouraged!</p>
    </div>

    <div class="announcement-card water-maintenance">
        <h5>🔧 <a href="#">Scheduled Water Supply Maintenance</a></h5>
        <p>📅 <strong>Date:</strong> March 25, 2025 | ⏰ 10:00 PM - 4:00 AM</p>
        <p>📌 <strong>Details:</strong> There will be a temporary water service interruption due to system maintenance. Please store enough water in advance.</p>
    </div>

    <div class="announcement-card fire-drill">
        <h5>🔥 Fire Drill and Emergency Preparedness Training</h5>
        <p>📅 <strong>Date:</strong> March 30, 2025 | ⏰ 9:00 AM</p>
        <p>📍 <strong>Venue:</strong> Basketball Court</p>
        <p>📌 <strong>Details:</strong> The subdivision, in partnership with the local fire department, will conduct a fire drill and safety training for all residents. Attendance is highly recommended.</p>
    </div>

    <div class="announcement-card security-alert">
        <h5>⚠️ Security Alert: Increased Patrols in the Area</h5>
        <p>📌 <strong>Details:</strong> Due to recent reports of suspicious activity, our security team has increased night patrols. Please report any unusual activity to the guardhouse at 📞 (123) 456-7890.</p>
    </div>
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
