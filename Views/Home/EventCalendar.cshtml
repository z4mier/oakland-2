@{
    ViewData["Title"] = "Event Calendar";
    ViewData["HideFooter"] = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Josefin Sans', sans-serif;
            background-color: #f8f9fa;
        }

        .container-fluid {
            max-width: 1200px;
        }

        .calendar-container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 5px;
        }

        .calendar-day {
            border: 1px solid #ddd;
            min-height: 80px;
            padding: 10px;
            text-align: left;
            font-size: 14px;
            position: relative;
        }

        .event {
            background-color: #007bff;
            color: white;
            padding: 2px 5px;
            font-size: 12px;
            border-radius: 4px;
            margin-top: 5px;
            display: inline-block;
        }

        .event-sidebar {
            background: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-8">
                <div class="calendar-container p-3">
                    <div class="mb-3">
                        <a href="javascript:history.back()" class="btn btn-outline-dark">⬅ Back</a>
                    </div>
                    <h4 class="text-center">EVENT CALENDAR</h4>
                    <div class="d-flex justify-content-between mb-2">
                        <button class="btn btn-sm btn-secondary">⬅</button>
                        <span>March 2025</span>
                        <button class="btn btn-sm btn-secondary">➡</button>
                    </div>
                    <div class="calendar-grid">
                        @for (int i = 1; i <= 31; i++)
                        {
                            <div class="calendar-day">
                                @i
                                @if (i == 19)
                                {
                                    <div class="event">Summer Festival</div>
                                }
                                @if (i == 30)
                                {
                                    <div class="event">Subdivision Talent Show</div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="event-sidebar">
                    <h5>Events</h5>
                    <p><strong>📅 Summer Festival & Family Fun Day</strong></p>
                    <p><strong>Date:</strong> March 19, 2025 | 3:00 PM - 8:00 PM</p>
                    <p><strong>Venue:</strong> Community Park</p>
                    <p>Enjoy food stalls, games, live music, and a fireworks display!</p>
                    <hr>
                    <p><strong>🎤 Subdivision Talent Show</strong></p>
                    <p><strong>Date:</strong> March 30, 2025 | 6:00 PM</p>
                    <p><strong>Venue:</strong> Clubhouse Function Hall</p>
                    <p>Come see the best talents in singing, dancing, and more!</p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
