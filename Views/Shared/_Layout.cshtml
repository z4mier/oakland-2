<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oakland Homeowners Association</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            overflow-x: hidden;
            font-family: 'Josefin Sans', sans-serif;
            scroll-behavior: smooth;
        }

        .full-height {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Full-width banner */
        .banner {
            width: 100%;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            background: url('/images/subdivision.png') no-repeat center center;
            background-size: cover;
        }

        /* Header */
        header {
            width: 100%;
            background-color: #333131;
        }

        .nav-btn {
            background: none;
            border: none;
            color: white;
            font-size: 16px;
            text-decoration: none;
            padding: 5px 10px;
        }
            .nav-btn:hover {
                text-decoration: underline;
            }

    </style>
</head>
<body>

    <!-- Header -->
    <header class="text-white py-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="/" style="text-decoration: none;">
                    <img src="/images/logo.png" alt="Oakland HOA Logo" style="height: 60px; margin-right: 10px;">
                </a>
                <h1 class="h3 m-0" style="font-size: 20px;">Oakland Homeowners Association</h1>
            </div>

            <div>
                <a href="/login" class="nav-btn me-2" style="font-weight: bold; font-size: 18px;">LOGIN</a>
                <a href="/signup" class="nav-btn" style="font-weight: bold; font-size: 18px;">SIGN UP</a>
                <a asp-controller="Home" asp-action="Dashboard" class="nav-btn" style="font-weight: bold; font-size: 18px;">Go to Dashboard</a>
            </div>
        </div>
    </header>

    <!-- Banner Section -->
    @if (ViewData["Title"] == "Home")
    {
        <div class="banner">
            <div class="container-fluid">
                <h2 style="font-weight: bold; font-size: 70px;">OAKLAND HOMEOWNERS<br>ASSOCIATION</h2>
                <p class="mb-4" style="font-weight: bold; font-size: 17px;">
                    The Oakland Subdivision, located at 123 Oakwood Drive, Greenwood City, 56789, is a peaceful,<br>
                    well-maintained residential community offering modern amenities, spacious homes, and a family-friendly atmosphere.
                </p>
                <a href="#about-section" class="btn btn-primary" style="background-color: #333131; color: white; border: none; padding: 10px 20px; border-radius: 5px; font-size: 18px; font-weight: bold; width: 200px; text-align: center;">ABOUT US</a>
            </div>
        </div>
    }

    <!-- Main content area -->
    <div class="flex-grow-1">
        @RenderBody()
    </div>


   @if (ViewData["HideFooter"] == null || !(bool)ViewData["HideFooter"])
{
    <!-- Footer -->
    <footer class="footer bg-black text-white py-4">
        <div class="container d-flex justify-content-between align-items-center flex-wrap">
            <div class="d-flex align-items-center">
                <img src="/images/logo.png" alt="Oakland HOA Logo" style="height: 60px; margin-right: 10px; border-radius: 50%; border: 2px solid white;">
                <div>
                    <h5 class="m-0 text-uppercase fw-bold">OAKLAND</h5>
                    <p class="m-0">HOMEOWNERS ASSOCIATION</p>
                </div>
            </div>
            <div class="text-end">
                <h6 class="fw-bold">CONTACT</h6>
                <p class="m-0"><i class="bi bi-telephone"></i> 87000-564-391</p>
                <div class="d-flex justify-content-end mt-2">
                    <a href="#" class="text-white me-3"><i class="bi bi-facebook" style="font-size: 20px;"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-instagram" style="font-size: 20px;"></i></a>
                    <a href="#" class="text-white"><i class="bi bi-twitter-x" style="font-size: 20px;"></i></a>
                </div>
            </div>
        </div>

        <hr class="my-3 border-white opacity-50">
        <div class="container d-flex justify-content-between flex-wrap">
            <p class="m-0">Copyright &copy; 2025 Oakland Homeowners Association. All rights reserved.</p>
            <div>
                <a href="#" class="text-white me-3">Privacy Policy</a>
                <a href="#" class="text-white">Terms & Conditions</a>
            </div>
        </div>
    </footer>
}


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
